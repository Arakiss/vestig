{
	"name": "vestig-monorepo",
	"version": "0.10.2",
	"private": true,
	"workspaces": ["packages/*", "apps/*"],
	"catalog": {
		"// TypeScript": "",
		"typescript": "^5.7.0",
		"@types/node": "^22.0.0",
		"// React 19.2": "",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"// Next.js 16": "",
		"next": "^16.1.0",
		"// MDX": "",
		"@next/mdx": "^16.0.10",
		"@mdx-js/loader": "^3.1.0",
		"@mdx-js/react": "^3.1.1",
		"@types/mdx": "^2.0.13"
	},
	"scripts": {
		"build": "bun run --filter 'vestig' build && bun run --filter '@vestig/next' build && bun run --filter '@vestig/web' build",
		"test": "bun run --filter '*' test",
		"lint": "biome check .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "bun run --filter '*' typecheck",
		"release": "release-it",
		"bench": "bun run packages/vestig/bench/index.ts",
		"validate:version": "node scripts/validate-version.js",
		"prepare": "node scripts/setup-hooks.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@release-it/conventional-changelog": "^10.0.4",
		"mitata": "^1.0.34",
		"pino": "^10.1.0",
		"release-it": "^19.1.0",
		"typescript": "^5.9.3",
		"winston": "^3.19.0"
	}
}
