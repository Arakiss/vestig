{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"git": {
		"commit": true,
		"commitMessage": "chore(release): v${version}",
		"tag": true,
		"tagName": "v${version}",
		"tagAnnotation": "Release v${version}",
		"push": true,
		"requireBranch": "main",
		"requireCleanWorkingDir": false,
		"requireUpstream": true
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"autoGenerate": false,
		"draft": false,
		"preRelease": false,
		"comments": {
			"submit": false
		}
	},
	"npm": {
		"publish": false,
		"versionArgs": ["--workspaces=false"]
	},
	"hooks": {
		"before:init": ["bun run typecheck", "bun run test", "bun run build"],
		"after:bump": "node -e \"const fs=require('fs');['packages/vestig/package.json','packages/vestig-next/package.json'].forEach(p=>{const pkg=JSON.parse(fs.readFileSync(p));pkg.version='${version}';fs.writeFileSync(p,JSON.stringify(pkg,null,'\\t')+'\\n');});\" && git add packages/vestig/package.json packages/vestig-next/package.json",
		"after:release": "cd packages/vestig && npm publish --access public && echo 'Published vestig v${version}' && cd ../vestig-next && npm publish --access public && echo 'Published @vestig/next v${version}'"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "âœ¨ Features" },
					{ "type": "fix", "section": "ğŸ› Bug Fixes" },
					{ "type": "perf", "section": "âš¡ Performance" },
					{ "type": "refactor", "section": "â™»ï¸ Refactoring" },
					{ "type": "docs", "section": "ğŸ“š Documentation" },
					{ "type": "test", "section": "âœ… Tests" },
					{ "type": "build", "section": "ğŸ“¦ Build" },
					{ "type": "ci", "section": "ğŸ”§ CI/CD" },
					{ "type": "chore", "section": "ğŸ§¹ Chores", "hidden": true }
				]
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to Vestig will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n"
		}
	}
}
