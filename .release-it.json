{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"git": {
		"commit": true,
		"commitMessage": "chore(release): v${version}",
		"tag": true,
		"tagName": "v${version}",
		"tagAnnotation": "Release v${version}",
		"push": true,
		"requireBranch": "main",
		"requireCleanWorkingDir": false,
		"requireUpstream": true
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"autoGenerate": true,
		"draft": false,
		"preRelease": false,
		"comments": {
			"submit": false
		}
	},
	"npm": {
		"publish": false,
		"versionArgs": ["--workspaces=false"]
	},
	"hooks": {
		"before:init": ["bun run typecheck", "bun run test", "bun run build"],
		"after:bump": "node -e \"const fs=require('fs');const p='packages/sigil/package.json';const pkg=JSON.parse(fs.readFileSync(p));pkg.version='${version}';fs.writeFileSync(p,JSON.stringify(pkg,null,'\\t')+'\\n');\" && git add packages/sigil/package.json",
		"after:release": "echo 'Successfully released sigil v${version}'"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "‚ú® Features" },
					{ "type": "fix", "section": "üêõ Bug Fixes" },
					{ "type": "perf", "section": "‚ö° Performance" },
					{ "type": "refactor", "section": "‚ôªÔ∏è Refactoring" },
					{ "type": "docs", "section": "üìö Documentation" },
					{ "type": "test", "section": "‚úÖ Tests" },
					{ "type": "build", "section": "üì¶ Build" },
					{ "type": "ci", "section": "üîß CI/CD" },
					{ "type": "chore", "section": "üßπ Chores", "hidden": true }
				]
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to Sigil will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n"
		}
	}
}
