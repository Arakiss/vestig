{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"git": {
		"commit": true,
		"commitMessage": "chore(release): v${version}",
		"tag": true,
		"tagName": "v${version}",
		"tagAnnotation": "Release v${version}",
		"push": true,
		"requireBranch": "main",
		"requireCleanWorkingDir": false,
		"requireUpstream": true
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"autoGenerate": false,
		"draft": false,
		"preRelease": false,
		"comments": {
			"submit": false
		}
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"before:init": ["bun run typecheck", "bun run test", "bun run build"],
		"after:bump": "echo 'Version bumped to ${version}'",
		"after:release": "echo 'Successfully released ${name} v${version} to ${repo.repository}'"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "Features" },
					{ "type": "fix", "section": "Bug Fixes" },
					{ "type": "perf", "section": "Performance" },
					{ "type": "refactor", "section": "Refactoring" },
					{ "type": "docs", "section": "Documentation" },
					{ "type": "style", "section": "Styling" },
					{ "type": "test", "section": "Tests" },
					{ "type": "build", "section": "Build" },
					{ "type": "ci", "section": "CI/CD" },
					{ "type": "chore", "section": "Chores", "hidden": true }
				]
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to Sigil will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n"
		}
	}
}
