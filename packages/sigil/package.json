{
	"name": "vestig",
	"version": "0.2.0",
	"description": "Leave your mark. A modern, runtime-agnostic structured logging library with automatic PII sanitization and context propagation.",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./context": {
			"types": "./dist/context/index.d.ts",
			"import": "./dist/context/index.js"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsc",
		"build:clean": "rm -rf dist && tsc",
		"test": "bun test --coverage",
		"test:watch": "bun test --watch",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"logging",
		"logger",
		"structured-logging",
		"typescript",
		"pino-alternative",
		"winston-alternative",
		"bun-logging",
		"bun",
		"node",
		"deno",
		"edge-runtime",
		"vercel",
		"cloudflare-workers",
		"browser",
		"pii",
		"gdpr",
		"hipaa",
		"pci-dss",
		"sanitization",
		"observability",
		"datadog",
		"transports",
		"context-propagation",
		"tracing"
	],
	"author": "Arakiss",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Arakiss/sigil.git",
		"directory": "packages/sigil"
	},
	"bugs": {
		"url": "https://github.com/Arakiss/sigil/issues"
	},
	"homepage": "https://github.com/Arakiss/sigil#readme",
	"devDependencies": {
		"typescript": "catalog:",
		"@types/node": "catalog:"
	},
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	}
}
