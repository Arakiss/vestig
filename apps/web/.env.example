# Vestig Web Application Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Base URL for the application (used in sitemap, meta tags, etc.)
NEXT_PUBLIC_SITE_URL=https://vestig.dev

# =============================================================================
# OPTIONAL: LOGGING & MONITORING
# =============================================================================

# Custom log endpoint (if not using default /api/vestig)
# LOG_ENDPOINT=/api/vestig

# =============================================================================
# OPTIONAL: DATADOG INTEGRATION
# =============================================================================

# Datadog API key for production logging
# Get this from https://app.datadoghq.com/organization-settings/api-keys
# DD_API_KEY=your_datadog_api_key

# Datadog site (default: datadoghq.com)
# DD_SITE=datadoghq.com

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================

# Google Analytics measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug mode for Vestig
# VESTIG_DEBUG=true
